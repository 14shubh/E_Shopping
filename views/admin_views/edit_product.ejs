<html>
    <head>
        <%-include('../partial/bootstrap.ejs')%>
        <link rel="stylesheet" href="/css/style.css"/>
    </head>
    <body>
        <%- include('admin_partial/navigation_bar.ejs')%>
        
        <div class="container mt-5">
        <form action="/product/edit_product" method="POST">
            <input type="hidden" name="id" value="<%=product.id%>"/>
            <div class="form-group">
                <lable>Name</lable>
                <input value='<%=product.name%>' type="text" name="name" class="form-control"/>
            </div>
            <div class="form-group">
                <lable>Price</lable>
                <input value='<%=product.price%>' type="text" name="price" class="form-control"/>
            </div>
            <div class="form-group">
                <lable>Image</lable>
                <input value="<%=product.product_Image4%>" type="text" name="product_Image4" class="form-control"/>
                <input value="<%=product.product_Image3%>" type="text" name="product_Image3" class="form-control"/>
                <input value="<%=product.product_Image2%>" type="text" name="product_Image4" class="form-control"/>
                <input value="<%=product.product_Image1%>" type="text" name="product_Image4" class="form-control"/>

            </div>
            <div class="form-group">
                <lable>Quantity</lable>
                <input value='<%=product.quantity%>' type="text" name="quantity" class="form-control"/>


            </div>
            <div class="form-group">
                <lable>Description</lable>
                <textarea name="description" class="form-control"><%=product.description%></textarea>
            </div>
            <div class="form-group">
              <button class="btn btn-primary" type="submit">Update product</button>
            </div>
        </form>
       </div>
    </body>
</html>
