<!DOCTYPE html>
<html lang="en">

<head>

    <%- include('partial/bootstrap.ejs')%>
        <link rel="stylesheet" href="/css/userStyle.css">
        <title>
            <%=title%>
        </title>
        <link rel="stylesheet" href="/css/userStyle.css">
        <script src="/js/registration_validation.js"></script>


</head>

<body>
    
    <div class="container-fluid">
        <div class="container">
            <div class="row form-box">
                <div class="col-md-6">
                    <div class="left-side-block">
                        
                          <div id="carouselExampleIndicators" class="carousel slide" data-ride="carousel">
                            <div class="carousel-inner">
                              <div class="carousel-item active">
                                <img class="d-block" src="images/slide_5.jpg"  alt="first slide">
                              </div>
                              <div class="carousel-item">
                                <img class="d-block" src="images/slide_3.jpg"  alt="second slide">
                              </div>
                              <div class="carousel-item">
                                <img class="d-block" src="images/slide_4.jpg"  alt="third slide">
                              </div>
                            </div>
                          </div>
                          
                    </div>
                </div>
                <div class="col-md-6">
                    <div class="right-side-block">
                        <form action="" method="post">
                            <div class="heading text-center ">
                                <h2>Registration</h2>
                            </div>
                           <div class="form-group">
                            <i class="fa-solid fa-user"></i>
                               <input type="text" name="firstname" placeholder="First name" id="firstname" required>
                           </div>
                           <div class="form-group">
                            <i class="fa-solid fa-user"></i>
                            <input type="text" name="lastname" placeholder="Last name" id="lastname" required>
                        </div>
                     
                        <div class="form-group">
                            <i class="fa-solid fa-envelope"></i>
                            <input type="email" name="email" placeholder="Email" id="email" required>
                        </div>
                        <div class="form-group">
                            <i class="fa-solid fa-mobile"></i>
                            <input type="phone" name="mobile" placeholder="Mobile" id="mobile" required>
                        </div>
                        <div class="form-group">
                            <i class="fa-solid fa-location-dot"></i>
                            <input type="text" name="address" placeholder="Address" id="address" required>
                        </div>
                        <div class="form-group">
                            <i class="fa-solid fa-location-dot"></i>
                            <input type="text" name="pincode" placeholder="Pincode" id="pincode" required>
                        </div>
                        <div class="form-group d-flex">
                            <i class="fa-solid fa-unlock-keyhole"></i> 
                            <input class="mr-2"type="password" name="password" placeholder="Password" id="password" required>
                            
                            <input type="password" name="confirm_password" placeholder="Confirm password" id="confirm_password" required>

                        </div>
                        <div class="form-group gender d-flex">
                            <span>Gender</span>
                               <div class="dropdown ml-3">
                                  <select>
                                      <option value="male">Male</option>
                                      <option value="female">Female</option>
                                      <option value="other">Other</option>
                                  </select>
                               </div>
                        </div>

                        <button type="submit" class="btn btn-primary w-100">Submit</button>
                        </form>
                    </div>
                </div>
            </div>
        </div>

    </div>
</body>

</html>